:global
	@import "~perfect-scrollbar/css/perfect-scrollbar.css?raw"
	.ps__thumb-y
		width 3px
		opacity .3
		right 1px
		transition width .1s ease-in-out, right .1s ease-in-out
	.ps
		.ps__rail-y
			cursor pointer
			width 5px
			transition width .1s ease-in-out, opacity .3s ease-in-out

			&.ps--clicking
				width 8px
				.ps__thumb-y
					width 4px
					right 2px
			&:hover
				width 8px
				.ps__thumb-y
					width 4px
					right 2px
			&:hover, &
				background-color alpha(#eee, .1) !important

.wrapper
	position relative
	display inline-block
	vertical-align middle
	box-sizing border-box
	width 100%
	grid-template-columns inherit
	&::after
	&::before
		content ''
		display block
		position absolute
		left 0
		right 0
		opacity 0
		height 0
		transition all 0.45s ease-in-out

	&::after
		background linear-gradient(180deg, rgba(29, 32, 43, 0) 0%, #1D202B 100%)
	&::before
		background linear-gradient(0deg, rgba(29, 32, 43, 0) 0%, #1D202B 100%)

.has-bottom
	&::after
		bottom 0
		opacity 1
		height 30px


.has-top
	&::before
		position absolute
		top 0
		opacity 1
		height 30px


.container
	position relative
	grid-template-columns inherit
	width 100%
	height 600px
	// height 100%
	&::-webkit-scrollbar
		width 0
		height 0
