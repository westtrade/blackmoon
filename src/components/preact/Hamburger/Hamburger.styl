.wrapper
	width 75px
	height 80px
	cursor pointer
	transition all .3s
	display flex
	align-items center
	justify-content center
	&:hover
		background-color #656E8D
		transition all .3s

	.icon
		position relative
		width 20px
		height 14px
		span
			opacity 1
			left 0
			display block
			width 100%
			height 2px
			border-radius: 10px
			color black
			background-color white
			position absolute
			transform rotate(0deg)
			transition .3s ease-in-out
			&:nth-child(1)
				top 0
			&:nth-child(2)
				top 6px
			&:nth-child(3)
				top 12px

	&.is-open
		.icon
			span
				&:nth-child(1)
					top 6px
					transform: rotate(135deg)
				&:nth-child(2)
					opacity 0
					left -20px
				&:nth-child(3)
					top 6px
					transform rotate(-135deg)
