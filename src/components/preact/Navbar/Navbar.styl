@import '../../../style/variables'

.navbar
	position relative
	height 80px
	background linear-gradient(0deg, rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.4)), rgba(0, 0, 0, 0.4)
	width 100%
	box-sizing border-box
	display flex
	flex-direction row
	transition .3s ease-in-out
	&.is-open
		background linear-gradient(0deg, rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), #656E8D
		box-shadow 0px 4px 20px rgba(0, 0, 0, 0.5)
		.divider
			background-color transparent

		.menu
			opacity 1


.divider
	position relative
	width 1px
	height auto
	flex-grow 0
	flex-shrink 0
	background-color rgba(100, 116, 173, 0.2)
	box-sizing border-box
	margin 20px 0
	transition .3s ease-in-out

.price-indicators
	display flex

.logo
	&-wrapper
		display flex
		padding 0 28px 0 20px
		+above($desktop-min)
			padding-right 59px
		height 80px
	&-short
		display none
		+below($desktop-min)
			display inline-flex
	&-full
		display none
		+above($desktop-min)
			display inline-flex



.menu
	padding 31px 0 22px
	margin-left 35px
	opacity 0
	transition opacity .5s ease-in-out
	height 100%
	flex-grow 0
	flex-shrink 0
	&-toggler
		flex-grow 0
		flex-shrink 0



.link
	text-transform uppercase
	font-weight 600
	color #fff
	text-decoration none
	margin-right 30px
	font-size 14px
	line-height normal

.active-link
	position relative
	&::after
		content ''
		display block
		position absolute
		bottom -6px
		height 3px
		width 50%
		transform translateX(50%)
		left 0
		background-color #fff

.user-menu
	height 100%
	display flex
	padding-right 25px
	align-items center
	justify-content center
	flex-shrink 0
	flex-grow 0
	&-item
		margin-left 20px
		flex-shrink 0
		flex-grow 0

.space
	width 100%
	flex-grow 1
	flex-shrink 1
