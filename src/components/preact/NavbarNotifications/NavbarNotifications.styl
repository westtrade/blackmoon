.wrapper
	position relative
	cursor pointer
	box-sizing border-box
	top 2px
	width 30px
	height 30px

.counter
	position absolute
	min-width 6px
	height 10px
	border-radius 10px
	background-color #B80000
	z-index 1
	font-size 8px
	font-family: "Montserrat", sans-serif;
	color #fff
	font-weight 600
	text-align center
	top 2px
	left 18px
	padding 0px 2px
	max-width 15px
	overflow hidden
	text-overflow ellipsis

.icon
	width 12px
	height 17px
	position absolute
	top 50%
	left 50%
	margin-top -12.5px
	margin-left -12.5px
